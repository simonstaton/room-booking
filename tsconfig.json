{
  "compilerOptions": {
    "plugins": [
      { "name": "typescript-plugin-css-modules" },
      {
        "name": "next"
      }
    ],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./types/BooksApi.d.ts",
    "./jest.setup.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
